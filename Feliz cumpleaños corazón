<body>
  <div class="card">
    <h1>
      <span class="typewriter" id="typeTarget"></span>
    </h1>
    <p id="mensajePersonal"></p>

    <!-- Botón de corazones -->
    <button id="loveBtn">💖🏀</button>

    <!-- Galería de fotos -->
    <div class="gallery">
      <img src="https://picsum.photos/seed/cumple1/600" alt="Recuerdo 1" />
