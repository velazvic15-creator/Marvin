      <img src="https://picsum.photos/seed/cumple6/600" alt="Recuerdo 6" />
    </div>
  </div>

  <script>
    const CONFIG = {
      nombre: 'Corazón de melón 💖',
      fechaTexto: '4 de Septiembre',
      mensajePrincipal: '¡Feliz cumpleaños, mi corazón de melón! 🍈❤️ Eres mi ingeniero favorito y mi persona favorita 💻',
      mensajePersonal: 'Amor, gracias por ser una persona tan increíble. Cada momento a tu lado es especial y me hace feliz. Estoy muy contenta de compartir tantos momentos contigo, corazón de melón 💖'
    };

    // Aplicar mensajes
    document.getElementById('typeTarget').textContent = CONFIG.mensajePrincipal;
    document.getElementById('mensajePersonal').textContent = CONFIG.mensajePersonal;

    // Typewriter
    const target = document.getElementById('typeTarget');
    const fullText = target.textContent.trim();
    target.textContent = '';
    let i = 0;
    const typer = setInterval(() => {
      target.textContent = fullText.slice(0, i++) + (i % 2 === 0 ? '|' : '');
      if (i > fullText.length) { clearInterval(typer); target.textContent = fullText; }
    }, 30);

    // Botón de corazones y balones
    const loveBtn = document.getElementById('loveBtn');
    loveBtn.addEventListener('click', () => {
      for (let j = 0; j < 25; j++) {
        const el = document.createElement('div');
        el.textContent = Math.random() > 0.5 ? '💖' : '🏀';
        el.style.position = 'fixed';
        el.style.left = Math.random() * window.innerWidth + 'px';
        el.style.top = Math.random() * window.innerHeight + 'px';
        el.style.fontSize = (14 + Math.random() * 20) + 'px';
        document.body.appendChild(el);
        setTimeout(() => el.remove(), 2000);
      }
    });
  </script>
</body>
